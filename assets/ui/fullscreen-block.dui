<define-template id="fullscreen-block">
    <div focus="block" z-index="5" style="
        position-type: absolute;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        background-color: #00000044;
    ">
        <component template="@content" passthrough="true" />
    </div>
</define-template>
